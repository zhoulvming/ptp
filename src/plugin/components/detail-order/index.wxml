<view class="pd-top-20 pd-bottom-20 display-col">
  <view class="order-grp-info" wx:if="{{orderDetail.status == 1}}">
    <text>还需邀请 {{orderDetail.leftNumber}} 位好友参团哦，距离结束 {{wxTimer}}</text>
  </view>
  <view class="order-status">
    <text>{{orderDetail.statusText}}</text>
  </view>
  <view class="wrapper">
    <view class="panel detail">
      <view class="picture"><image src="{{orderDetail.prdImage}}" mode="scaleToFill"/></view>
      <view class="info">
        <text class="name">{{orderDetail.prdName}}</text>
        <text class="desc">{{orderDetail.numbers}} 人团，自购买日后 {{orderDetail.validDays}} 天内有效</text>
        <view class="buying-info">
          <view class="price-now">
            <text class="money-flag">￥</text>
            <view class="now-pref">{{orderDetail.price_pref}}</view>
            <view class="now-suff">{{orderDetail.price_suff}}</view>
          </view>
          <view class="buying-count">
            x{{orderDetail.quantity}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="wrapper">
    <view class="panel total">
      <view class="total-price" style="border-bottom:{{orderDetail.status==9?'':'1rpx solid #ddd'}}">
        <text class="title">合计</text>
        <view class="price">
          <text class="type">￥</text>
          <text class="pref">{{orderDetail.totalPrice}}</text>
        </view>  
      </view>
      <view class="order-btn" bindtap="gotoGrpPage" wx:if="{{orderDetail.status!=9}}">
        <text>查看拼团详情</text>
        <text>></text>
      </view>
      
    </view>
  </view>
  <view class="wrapper">
    <view class="panel order-info">
      <text class="title">订单号：{{orderDetail.orderNo}}</text>
      <text class="content">创建时间：{{orderDetail.orderTime==null?'':orderDetail.orderTime}}</text>
      <text class="content">支付时间：{{orderDetail.payTime==null?'':orderDetail.payTime}}</text>
      <text class="content" wx:if="{{orderDetail.status == 6}}">发货时间：{{orderDetail.deliveryTime==null?'':orderDetail.deliveryTime}}</text>
      <text class="content" wx:if="{{orderDetail.status == 8}}">退款时间：{{orderDetail.returnTime==null?'':orderDetail.returnTime}}</text>
    </view>
  </view>
</view>