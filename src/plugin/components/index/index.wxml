<view class="main">
  <view class="header">
    <swiper class="top-swipper" indicator-dots="{{indicatorDots}}" 
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="100%" height="100%"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='tab'>
    <view class='tab-nav'>
      <view wx:for="{{prds}}" wx:for-item="item" 
        wx:for-index="index" 
        class='{{currentTab==index?"on":"off"}}' 
        data-current="{{index}}" bindtap='tabChange'>
        {{item.actionName}}
      </view>
    </view>
    <swiper class='tab-box' current="{{currentTab}}" bindchange="tabSwiper" style="height:{{swipperHeight + 'rpx'}}">
      <swiper-item wx:for="{{prds}}" wx:for-item="item" >
        <view wx:for="{{item.items}}" wx:for-item="prd_item" class="card-item">
          <image class="logo" src="{{prd_item.image}}"></image>
          <view class="name display-row">
            <text class="prd-numbers">{{prd_item.numbers}}人团</text>
            <text class="prd-name">{{prd_item.proName}}</text>
          </view>
          <view class="footer">
            <view class="price">
              <text class="now">￥{{prd_item.price}}</text>
              <text class="org">￥{{prd_item.orgPrice}}</text>
            </view>
          </view>
          <button class="btn" bindtap="gotoPage" data-target="detail-prd">去开团</button>
        </view>
      </swiper-item>
    </swiper>
  </view>


