<view class="pd-top-20 pd-bottom-20 display-col">
  <view class="order-grp-info" wx:if="{{order_status_code == 0}}">
    <text>还需邀请 {{orderDetail.leftNumber}} 位好友参团哦，距离结束 {{left_days}}天{{wxTimer}}</text>
  </view>
  <view class="order-status">
    <text>{{order_status_text}}</text>
  </view>
  <view class="wrapper">
    <view class="panel detail">
      <image src="{{orderDetail.prdImage}}"/>
      <view class="content">
        <text class="title">{{orderDetail.prdName}}</text>
        <text class="desc">{{orderDetail.numbers}} 人团，自购买日后 {{orderDetail.validDays}} 天内有效</text>
        <view class="price">
          <text class="type">￥</text>
          <text class="pref">{{orderDetail.price}}</text>
          <text class="count">x {{orderDetail.quantity}}</text>
        </view>        
      </view>
    </view>
  </view>
  <view class="wrapper">
    <view class="panel total">
      <view class="total-price">
        <text class="title">合计</text>
        <view class="price">
          <text class="type">￥</text>
          <text class="pref">{{totalPrice}}</text>
        </view>  
      </view>
      <button class="btn link underline" bindtap="gotoGrpPage">查看拼团详情</button>
    </view>
  </view>
  <view class="wrapper">
    <view class="panel order-info">
      <text class="title">订单号：{{orderDetail.orderNo}}</text>
      <text class="content">创建时间：{{orderDetail.orderTime==null?'':orderDetail.orderTime}}</text>
      <text class="content">支付时间：{{orderDetail.payTime==null?'':orderDetail.payTime}}</text>
    </view>
  </view>
</view>