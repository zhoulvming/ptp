/** component **/
page {
  background-color: #f0f0f0;
}
.wrapper {
  padding: 20rpx;
}
.panel {
  padding: 25rpx;
  background-color: white;
  border-radius: 15rpx;
}
.panel-no-radius {
  padding: 15rpx;
  background-color: white;
}
/** structure **/
.display-col {
  display: flex;
  flex-direction: column;
}
.display-row {
  display: flex;
  flex-direction: row;
}
.align-right {
  text-align: right;
}
.align-center {
  text-align: center;
}
/** font-size **/
.fs-title {
  font-size: 35rpx;
  font-weight: 600;
}
.fs-warning {
  font-size: 35rpx;
  font-weight: 600;
}
.fs-content {
  font-size: 30rpx;
}
/** font-color **/
.fc-primary {
  color: #008FDB;
}
.link-normal {
  color: #888;
  font-size: 30rpx;
  text-decoration: underline;
}
.top-swiper image {
  height: 100%;
  width: 100%;
}
/** 按钮样式 **/
.btn.mini {
  padding: 0rpx 34rpx;
  margin: auto;
  text-align: center;
  background: #008FDB;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 10rpx;
}
.btn.link {
  display: inline;
  font-size: 25rpx;
  background: none !important;
  color: #555 !important;
}
.btn.link::after {
  border: none;
}
/** 价格定制样式 **/
.price-detail {
  display: flex;
  flex-direction: row;
  position: relative;
}
.price-detail .flag {
  position: absolute;
  bottom: 0;
  font-size: 25rpx;
  font-weight: 600;
}
.price-detail .pref {
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  bottom: -6rpx;
  padding-left: 23rpx;
}
.price-detail .suff {
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
  bottom: -2rpx;
  padding-left: 45rpx;
}
/** 底部按钮样式 **/
.status {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  margin: 0 auto;
  font-weight: 700;
}
.status image {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  margin-right: 20rpx;
}
.status text.on {
  color: #008FDB;
}
.order-grp-info {
  font-size: 30rpx;
  font-weight: 600;
  background: #555;
  color: whitesmoke;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.order-status {
  margin-top: 40rpx;
  text-align: left;
  margin-left: 50rpx;
  font-size: 35rpx;
}
.detail {
  display: flex;
  flex-direction: row;
}
.detail image {
  height: 250rpx;
  width: 33%;
}
.detail .content {
  width: 67%;
  display: flex;
  flex-direction: column;
  padding-top: 15rpx;
  position: relative;
}
.detail .content .title {
  font-size: 35rpx;
  font-weight: 600;
}
.detail .content .desc {
  font-size: 30rpx;
  color: grey;
}
.detail .content .price {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}
.detail .content .price .type {
  font-size: 30rpx;
  margin-top: 9rpx;
}
.detail .content .price .pref {
  font-size: 40rpx;
  font-weight: 600;
  margin-top: -2rpx;
}
.detail .content .price .suff {
  font-size: 30rpx;
  margin-top: 11rpx;
}
.detail .content .price .count {
  font-size: 30rpx;
  width: 60%;
  text-align: right;
  margin-top: 10rpx;
}
.total {
  text-align: center;
}
.total .total-price {
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.total .total-price .price {
  position: absolute;
  right: 0;
}
.total .total-price .price .type {
  font-size: 30rpx;
  margin-top: 9rpx;
}
.total .total-price .price .pref {
  font-size: 40rpx;
  font-weight: 600;
  margin-top: -2rpx;
}
.total .total-price .price .suff {
  font-size: 30rpx;
  margin-top: 11rpx;
}
.total .total-price .price .count {
  font-size: 30rpx;
  width: 60%;
  text-align: right;
  margin-top: 10rpx;
}
