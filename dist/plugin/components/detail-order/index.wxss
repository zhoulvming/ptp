/** 遮罩 **/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
.fix-iphonex-button {
  bottom: 60rpx!important;
}
 .fix-iphonex-button::after {
  content: ' ';
  position: fixed;
  bottom: 0!important;
  height: 60rpx!important;
  width: 100%;
  background: #fff;
}
.iphoneX {
  height: 60rpx;
  background: #fff;
  border: none;
}
.status {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  margin: 0 auto;
  font-weight: 700;
}
.status image {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  margin-right: 20rpx;
}
.status text.on {
  color: #D62F35;
}
.order-grp-info {
  font-size: 23rpx;
  background: #555;
  color: whitesmoke;
  padding-top: 20rpx;
  padding-bottom: 12rpx;
  padding-top: 12rpx;
  text-align: center;
}
.order-status {
  margin-top: 40rpx;
  text-align: left;
  margin-left: 50rpx;
  font-size: 30rpx;
}
.detail {
  display: flex;
  flex-direction: row;
}
.detail .picture {
  width: 160rpx;
  height: 160rpx;
}
.detail .picture image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.detail .info {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  width: 100%;
  position: relative;
}
.detail .info .name {
  font-size: 35rpx;
  font-weight: 600;
}
.detail .info .desc {
  font-size: 25rpx;
  color: grey;
}
.detail .info .buying-info {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0;
  margin-top: 15rpx;
  justify-content: space-between;
  width: 100%;
}
.detail .info .buying-info .price-now {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: flex-end;
}
.detail .info .buying-info .price-now .money-flag {
  font-size: 24rpx;
  font-weight: 0;
}
.detail .info .buying-info .price-now .money-flag-ipx {
  font-size: 24rpx;
  font-weight: 0;
}
.detail .info .buying-info .price-now .now-pref {
  font-size: 33rpx;
  font-weight: 400;
  margin-bottom: -2rpx;
}
.detail .info .buying-info .price-now .now-pref-ipx {
  font-size: 33rpx;
  font-weight: 400;
  margin-bottom: -2rpx;
}
.detail .info .buying-info .price-now .now-suff {
  font-size: 24rpx;
  font-weight: 0;
}
.detail .info .buying-info .price-now .now-suff-ipx {
  font-size: 24rpx;
  font-weight: 0;
}
.detail .info .buying-info .buying-count {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  font-size: 30rpx;
}
.total {
  text-align: center;
  padding: 0;
  font-size: 28rpx;
}
.total .total-price {
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 30rpx 40rpx 20rpx 40rpx;
  justify-content: space-between;
}
.total .total-price .price .type {
  font-size: 25rpx;
}
.total .total-price .price .pref {
  font-size: 35rpx;
}
.total .total-price .price .suff {
  font-size: 25rpx;
}
.total .order-btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #aaa;
  padding: 20rpx 40rpx 30rpx 40rpx;
}
.total .order-btn image {
  margin-top: 10rpx;
  height: 25rpx;
  width: 17rpx;
}
.order-back {
  display: flex;
  flex-direction: column;
}
.order-back .title {
  font-weight: 500;
  font-size: 30rpx;
