/** 遮罩 **/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
.fix-iphonex-button {
  bottom: 60rpx!important;
}
 .fix-iphonex-button::after {
  content: ' ';
  position: fixed;
  bottom: 0!important;
  height: 60rpx!important;
  width: 100%;
  background: #fff;
}
.iphoneX {
  display: flex;
  flex-direction: row;
  height: 60rpx;
}
.iphoneX .left {
  width: 30%;
  background: #555;
}
.iphoneX .right {
  background: #008FDB;
}
.modalDlg-buycount {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  background-color: #008FDB;
  border-radius: 0;
  display: flex;
  flex-direction: column;
}
.modalDlg-buycount .prd-info {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  position: relative;
  background-color: #fff;
}
.modalDlg-buycount .prd-info .picture {
  width: 160rpx;
  height: 160rpx;
}
.modalDlg-buycount .prd-info .picture image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.modalDlg-buycount .prd-info .close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 50rpx;
}
.modalDlg-buycount .prd-info .info {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
}
.modalDlg-buycount .prd-info .info .name {
  font-size: 30rpx;
  font-weight: 600;
  color: #008FDB;
}
.modalDlg-buycount .prd-info .info .gp-info {
  margin-top: 10rpx;
  text-align: center;
  width: 120rpx;
  border: 1px solid #f9a825;
  border-radius: 8rpx;
  font-size: 25rpx;
  font-weight: 600;
  color: #f9a825;
  background: #FFF6E8;
}
.modalDlg-buycount .prd-info .info .price-now {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.modalDlg-buycount .prd-info .info .price-now .money-flag {
  font-size: 35rpx;
  margin-top: 18rpx;
}
.modalDlg-buycount .prd-info .info .price-now .now-pref {
  font-size: 50rpx;
}
.modalDlg-buycount .prd-info .info .price-now .now-suff {
  font-size: 35rpx;
  margin-top: 18rpx;
}
.modalDlg-buycount .buycount {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  padding: 10rpx 40rpx 60rpx 40rpx;
}
.modalDlg-buycount .buycount .info {
  display: flex;
  flex-direction: column;
}
.modalDlg-buycount .buycount .info .largeText {
  font-size: 30rpx;
  margin-top: 10rpx;
}
.modalDlg-buycount .buycount .info .leftCount {
  font-size: 25rpx;
  color: grey;
  margin-top: 30rpx;
}
.modalDlg-buycount .buycount .count {
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 50rpx;
}
.modalDlg-buycount .buycount .count .input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 180rpx;
}
.modalDlg-buycount .buycount .count .input image {
  width: 58rpx;
  height: 58rpx;
}
.modalDlg-buycount .buycount .count .input .ic,
.modalDlg-buycount .buycount .count .input .ad {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -o-border-radius: 50%;
  -ms-border-radius: 50%;
  background: #008FDB;
  font-size: 50rpx;
  color: #ffffff;
  text-align: center;
  position: relative;
}
.modalDlg-buycount .buycount .count .input .ic text,
.modalDlg-buycount .buycount .count .input .ad text {
  top: -3rpx;
  position: absolute;
  left: 10rpx;
}
.modalDlg-buycount .buycount .count .input .ic.off,
.modalDlg-buycount .buycount .count .input .ad.off {
  background: #888;
}
.modalDlg-buycount .buycount .count .input .in {
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  border-width: 0 ;
  font-size: 35rpx;
  font-weight: 600;
  color: #333333;
  margin: 0 10rpx;
  text-align: center;
}
.modalDlg-buycount .buycount .count .info {
  font-size: 25rpx;
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
}
.modalDlg-buycount .btn-bottom {
  width: 100%;
  background-color: #008FDB;
  border-radius: 0;
  box-sizing: none;
  color: white;
  margin: 0;
  padding: 30rpx 0;
  text-align: center;
  font-size: 38rpx;
  font-weight: 600;
}
