/** component **/
page {
  background-color: #f0f0f0;
}
.wrapper {
  padding: 20rpx;
}
.panel {
  padding: 25rpx;
  background-color: white;
  border-radius: 15rpx;
}
.panel-no-radius {
  padding: 15rpx;
  background-color: white;
}
/** structure **/
.display-col {
  display: flex;
  flex-direction: column;
}
.display-row {
  display: flex;
  flex-direction: row;
}
.align-right {
  text-align: right;
}
