/** 遮罩 **/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
.status {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  margin: 0 auto;
  font-weight: 700;
}
.status image {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  margin-right: 20rpx;
}
.status text.on {
  color: #008FDB;
}
.detail {
  display: flex;
  flex-direction: row;
  padding: 25rpx;
}
.detail image {
  height: 200rpx;
  width: 200rpx;
}
.detail .content {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  position: relative;
  width: 450rpx;
}
.detail .content .title {
  font-size: 35rpx;
  font-weight: 600;
}
.detail .content .desc {
  font-size: 30rpx;
  color: grey;
}
.detail .content .buying-info {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
}
.detail .content .buying-info .price-now {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
}
.detail .content .buying-info .price-now .money-flag {
  position: absolute;
  bottom: 0;
  font-size: 25rpx;
}
.detail .content .buying-info .price-now .now-pref {
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  bottom: -6rpx;
  padding-left: 23rpx;
}
.detail .content .buying-info .price-now .now-suff {
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
  bottom: -2rpx;
  padding-left: 45rpx;
}
.detail .content .buying-info .price-org {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  left: 100rpx;
}
.detail .content .buying-info .price-org text {
  color: #888;
  font-size: 30rpx;
  text-decoration: line-through;
}
.detail .content .buying-info .buying-count {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  font-size: 35rpx;
}
.detail-user {
  text-align: center;
}
.detail-user .members {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  width: 370rpx;
}
.detail-user .members .avatar {
  padding-top: 20rpx;
  position: relative;
}
.detail-user .members .avatar image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin: 0 10rpx;
}
.detail-user .members .avatar .isLeader {
  position: absolute;
  bottom: 10rpx;
  border-radius: 20rpx;
  background-color: #008FDB;
  margin-left: 30rpx;
  color: white;
  font-size: 25rpx;
  font-weight: 600;
  padding: 3rpx 10rpx;
}
.detail-user .members .unknown {
  position: relative;
  margin-top: 8px;
}
.detail-user .members .unknown image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin: 0 10rpx;
  border: 1rpx dotted;
}
.detail-user .timer {
  font-size: 30rpx;
  margin-top: 20rpx;
  font-weight: 600;
}
.detail-user .timer .count {
  font-size: 35rpx;
  color: #008FDB;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.detail-user .left-count {
  margin-top: 20rpx;
  font-size: 35rpx;
}
.detail-user .left-count text {
  font-size: 35rpx;
  font-weight: 600;
  color: #008FDB;
}
.detail-user .action {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}
.detail-user .action button {
  background-color: #008FDB;
  border-radius: 15rpx;
  color: white;
  padding-left: 70rpx;
  padding-right: 70rpx;
}
/*modal*/
.modalDlg {
  width: 100%;
  height: 580rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  background-color: #fff;
  border-radius: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modalDlg .prd-info {
  padding: 15rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.modalDlg .prd-info .picture {
  width: 200rpx;
  height: 200rpx;
  margin-left: 15rpx;
}
.modalDlg .prd-info .close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}
.modalDlg .prd-info .info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.modalDlg .prd-info .info .name {
  font-size: 35rpx;
  font-weight: 700;
}
.modalDlg .prd-info .info .gp-info {
  text-align: center;
  width: 150rpx;
  border: 1px solid #f9a825;
  border-radius: 8rpx;
  font-size: 25rpx;
  font-weight: 600;
  color: #f9a825;
  margin: 5rpx 10rpx;
}
.modalDlg .prd-info .info .price {
  margin-top: 70rpx;
  font-size: 35rpx;
  font-weight: 700;
}
.modalDlg .buycount {
  position: relative;
  padding: 15rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 100%;
}
.modalDlg .buycount > .info {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  width: 50%;
  text-align: left;
}
.modalDlg .buycount > .info .largeText {
  font-size: 35rpx;
}
.modalDlg .buycount > .info .leftCount {
  font-size: 30rpx;
  color: grey;
  margin-top: 35rpx;
}
.modalDlg .buycount .count {
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 40rpx;
}
.modalDlg .buycount .count .input {
  display: flex;
  flex-direction: row;
}
.modalDlg .buycount .count .input .ic,
.modalDlg .buycount .count .input .ad {
  float: left;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  background: #008FDB;
  font-size: 35rpx;
  color: #ffffff;
  text-align: center;
}
.modalDlg .buycount .count .input .in {
  float: left;
  width: 90rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-width: 0 ;
  font-size: 35rpx;
  color: #333333;
  margin: 0 20rpx;
  text-align: center;
}
.modalDlg .buycount .count .info {
  font-size: 30rpx;
  width: 100%;
  margin-top: 25rpx;
  text-align: center;
}
.modalDlg button {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #008FDB;
  font-weight: 700;
  border-radius: 0;
  box-sizing: none;
  color: white;
}
