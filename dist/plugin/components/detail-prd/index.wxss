  margin-top: 30rpx;
}
.mt-50 {
  margin-top: 50rpx;
}
.mt-100 {
  margin-top: 100rpx;
}
.mb-50 {
  margin-bottom: 50rpx;
}
.mb-100 {
  margin-bottom: 100rpx;
}
