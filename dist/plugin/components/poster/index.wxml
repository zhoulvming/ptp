<view class="commodity_screen2" bindtap='closePoste'  style='opacity: 0.8;' wx:if="{{showpost}}"></view>
<view class='poste_box' bindlongpress='catchCode' hidden='{{!showpost}}'>
  <view class='poste_content' id='canvas-container'>
    <canvas canvas-id="myCanvas" style="width:100%;height:900rpx;" />
  </view>
  <button bindtap="saveShareImg">保存图片</button>
  <view class='close-poste'>
    <image src='../../images/icons/dele.png' catchtap='closePoste'></image>
  </view>
</view>