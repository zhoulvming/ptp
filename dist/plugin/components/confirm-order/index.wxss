/** component **/
page {
  background-color: #FEFEFE;
}
.wrapper {
  padding: 20rpx;
}
.panel {
  padding: 15rpx;
  background-color: white;
  border-radius: 15rpx;
}
.panel-no-radius {
  padding: 15rpx;
  background-color: white;
}
/** structure **/
.display-col {
  display: flex;
  flex-direction: column;
}
.display-row {
  display: flex;
  flex-direction: row;
}
.align-right {
  text-align: right;
}
.align-center {
  text-align: center;
}
/** font-size **/
.fs-title {
  font-size: 35rpx;
  font-weight: 600;
}
.fs-warning {
  font-size: 35rpx;
  font-weight: 600;
}
.fs-content {
  font-size: 30rpx;
}
.btn-primary-normal {
  padding: 0 30rpx;
  margin: auto;
  text-align: center;
  background: #008FDB;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}
.link-normal {
  color: #888;
  font-size: 30rpx;
  text-decoration: underline;
}
.link-btn {
  display: inline;
  font-size: 25rpx;
  background: none !important;
  color: #888 !important;
  text-decoration: underline;
}
.link-btn::after {
  border: none;
}
.top-swiper image {
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: row;
  padding: 25rpx;
}
.detail image {
  height: 200rpx;
  width: 200rpx;
}
.detail .content {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  position: relative;
  width: 450rpx;
}
.detail .content .title {
  font-size: 35rpx;
  font-weight: 600;
}
.detail .content .desc {
  font-size: 30rpx;
  color: grey;
}
.detail .content .buying-info .price {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
}
.detail .content .buying-info .price .money-flag {
  position: absolute;
  bottom: 0;
  font-size: 25rpx;
}
.detail .content .buying-info .price .pref {
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  bottom: -6rpx;
  padding-left: 23rpx;
}
.detail .content .buying-info .price .suff {
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
  bottom: -2rpx;
  padding-left: 45rpx;
}
.detail .content .buying-info .price .count {
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  font-size: 35rpx;
}
.detail .content .buying-info .buying-count {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  font-size: 35rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #555;
  height: 120rpx;
}
.footer .action {
  display: flex;
  flex-direction: row;
  background: #000;
  position: relative;
}
.footer .action .info {
  position: absolute;
  margin-top: 36rpx;
  margin-left: 60rpx;
  color: white;
  font-size: 40rpx;
}
.footer .action .btn {
  position: absolute;
  right: 0;
  color: white;
  background: #008FDB;
  bottom: -120rpx;
  padding: 36rpx 50rpx;
  font-weight: 600;
}
