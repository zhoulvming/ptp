/** 按钮样式 **/
.btn.mini {
  padding: 0rpx 34rpx;
  text-align: center;
  background: #D62F35;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 10rpx;
  line-height: 2.3;
}
.btn.link {
  display: inline;
  font-size: 25rpx;
  background: none !important;
  color: #888 !important;
}
.btn.link.underline {
  text-decoration: underline;
}
.btn.link::after {
  border: none;
}
.btn.large-single {
  width: 100%;
  border-radius: 0;
  box-sizing: none;
  border-bottom: 1rpx solid #eee;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.btn.large-single::after {
  border: none;
}
/** 价格定制样式 **/
.price-detail {
  display: flex;
  flex-direction: row;
  position: relative;
}
.price-detail .flag {
  position: absolute;
  bottom: 0;
  font-size: 25rpx;
  font-weight: 600;
}
.price-detail .pref {
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  bottom: -6rpx;
  padding-left: 23rpx;
}
.price-detail .suff {
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
  bottom: -2rpx;
  padding-left: 45rpx;
}
