/** 遮罩 **/
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
.card-list > .title {
  color: #008FDB;
  font-size: 35rpx;
  font-weight: 500;
  margin: 0 auto;
  text-align: center;
  border-bottom: 2px solid #008FDB;
  margin-bottom: 40rpx;
}
.tab {
  margin-top: 40rpx;
}
.tab .tab-nav {
  height: 70rpx;
  line-height: 70rpx;
}
.tab .tab-nav view {
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.tab .tab-nav view.on {
  color: #008FDB;
}
.tab .tab-nav view.on text {
  border-bottom: 5rpx solid #008FDB;
}
.tab .tab-nav view.off {
  color: #888;
}
.tab .tab-box {
  padding: 20rpx 35rpx;
}
.card-item {
  overflow: hidden;
  margin-bottom: 40rpx;
  border-radius: 8rpx;
  box-shadow: 0 6rpx 10rpx 6rpx #bbb;
  -webkit-box-shadow: 0px 2px 4px 2px #bbb;
  position: relative;
}
.card-item image {
  width: 100%;
}
.card-item .name {
  padding: 10rpx;
}
.card-item .name .prd-numbers {
  border: 1rpx solid #f9a825;
  border-radius: 8rpx;
  color: #f9a825;
  font-size: 25rpx;
  padding: 0 10rpx;
  font-weight: 500;
  margin-right: 10rpx;
}
.card-item .name .prd-name {
  font-size: 30rpx;
  font-weight: 500;
}
.card-item .btn {
  position: absolute;
  margin-right: 20rpx;
  float: left;
  bottom: 30rpx;
  right: 10rpx;
}
.card-item .footer {
  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin: 5rpx 20rpx;
}
.card-item .footer .price {
  width: 60%;
  font-size: 35rpx;
}
.card-item .footer .price .pref {
  font-size: 45rpx;
}
.card-item .footer .price .suff {
  font-size: 25rpx;
}
.card-item .footer .price .org {
  color: #555;
  margin-left: 30rpx;
  text-decoration: line-through;
}
